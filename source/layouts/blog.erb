<% wrap_layout :layout do %>
  <div class="container">
    <div class="blog_container">
      <div class='row'>
        <div class='col s12'>
          <header>
            <h3 style="padding-top: 2em;"><%= current_article.title %></h3>
            <time><%= current_article.date.strftime('%b %e %Y') %></time>
          </header>
          <article>
            <%= yield %>
          </article>
        </div>
      </div>
    </div>
  </div>
<% end %>
