<% wrap_layout :layout do %>
  <div class="container blog_container">
    <div class='row'>
      <div class='col s12'>
        <header>
          <h3 style="padding-top: 2em;"><%= current_article.title %></h3>
          <p><%= current_article.data.author %>
        </header>
        <article>
          <%= yield %>
        </article>
      </div>
    </div>
  </div>
<% end %>